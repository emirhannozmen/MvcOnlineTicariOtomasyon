@model MvcOnlineTicariOtomasyon.Models.Siniflar.Class1
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>AdminLTE 3 | E-commerce</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/AdminLTE-3.0.4/plugins/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <link rel="stylesheet" href="~/AdminLTE-3.0.4/dist/css/adminlte.min.css">
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
</head>
<body class="hold-transition sidebar-mini">
    <br />
    <div class="wrapper">
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
        </nav>
        <section class="content">
            <div class="card card-solid">
                @foreach (var x in Model.Deger1)
                {
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb" style="background-color: #f8f9fa;">
                            <li class="breadcrumb-item"><a href="/Login/Index/" style="color: #007bff;">Anasayfa</a></li>
                            <li class="breadcrumb-item"><a href="/Urun/Index/" style="color: #007bff;">Ürünler</a></li>
                            <li class="breadcrumb-item active" aria-current="page" style="color: #343a40;">@x.UrunAd</li>
                        </ol>
                    </nav>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-12 col-sm-6">
                                <h3 class="d-inline-block d-sm-none">LOWA Men’s Renegade GTX Mid Hiking Boots Review</h3>
                                <div class="collapse-horizontal">
                                    <img src="@x.UrunGorsel" class="product-image" alt="Product Image">
                                </div>
                                <div class="col-12 product-image-thumbs">
                                </div>
                            </div>
                            <div class="col-12 col-sm-6">
                                <h3 class="my-3">@x.UrunAd</h3>
                                <p>&nbsp;@x.Marka</p>
                                <hr>
                                <div class="bg-dark py-2 px-3 mt-4">
                                    <h2 class="mb-0">₺@x.SatisFiyat</h2>
                                    <h4 class="mt-0"><small>Alış Fiyat: ₺@x.AlisFiyat </small></h4>
                                </div>
                                <div class="mt-4 d-flex flex-column flex-md-row justify-content-between gap-3">
                                    <button class="btn btn-success btn-lg w-100 w-md-auto rounded-pill">
                                        <i class="fas fa-cart-plus fa-lg mr-3"></i>Satın Al
                                    </button>
                                    <button class="btn btn-primary btn-lg w-100 w-md-auto rounded-pill">
                                        <i class="fas fa-heart fa-lg mr-3"></i>Favorilerime Ekle
                                    </button>
                                </div>
                                <div class="mt-4 product-share">
                                    <a href="#" class="text-dark">
                                        <i class="fab fa-whatsapp-square fa-2x"></i>
                                    </a>
                                    <a href="#" class="text-dark">
                                        <i class="fab fa-twitter-square fa-2x"></i>
                                    </a>
                                    <a href="#" class="text-dark">
                                        <i class="fas fa-envelope-square fa-2x"></i>
                                    </a>
                                    <a href="#" class="text-dark">
                                        <i class="fas fa-phone-square fa-2x"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="row mt-4">
                            <nav class="w-100">
                                <div class="nav nav-tabs" id="product-tab" role="tablist">
                                    <a class="nav-item nav-link active" id="product-desc-tab" data-toggle="tab" href="#product-desc" role="tab" aria-controls="product-desc" aria-selected="true">Açıklama</a>
                                    <a class="nav-item nav-link" id="product-comments-tab" data-toggle="tab" href="#product-comments" role="tab" aria-controls="product-comments" aria-selected="false">Yorumlar</a>
                                    <a class="nav-item nav-link" id="product-rating-tab" data-toggle="tab" href="#product-rating" role="tab" aria-controls="product-rating" aria-selected="false">Detaylar</a>
                                </div>
                            </nav>
                            <div class="tab-content p-3" id="nav-tabContent">
                                @foreach (var y in Model.Deger2)
                                {
                                    <div class="tab-pane fade show active" id="product-desc" role="tabpanel" aria-labelledby="product-desc-tab"> @y.UrunAd @y.UrunBilgi </div>
                                    <div class="tab-pane fade" id="product-comments" role="tabpanel" aria-labelledby="product-comments-tab">-</div>
                                    <div class="tab-pane fade" id="product-rating" role="tabpanel" aria-labelledby="product-rating-tab">--</div>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        </section>
    </div>
    <aside class="control-sidebar control-sidebar-dark">
    </aside>
    <script src="~/AdminLTE-3.0.4/plugins/jquery/jquery.min.js"></script>
    <script src="~/AdminLTE-3.0.4/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/AdminLTE-3.0.4/dist/js/adminlte.min.js"></script>
    <script src="~/AdminLTE-3.0.4/dist/js/demo.js"></script>
</body>
</html>
