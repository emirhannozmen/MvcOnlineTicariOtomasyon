@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<KargoDetay>

@{
    ViewBag.Title = "Kargo Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="text-center">Kargo Listesi</h2>
<br />

@using (Html.BeginForm("Index", "Kargo", FormMethod.Get))
{
    <div class="text-center">
        <p>
            Kargo Takip No: @Html.TextBox("p", null, new { @class = "form-control d-inline-block", style = "width: auto;" })
            <input type="submit" value="Ara" class="btn btn-outline-dark"/>
        </p>
    </div>
}
<br />

<div class="table-responsive">
    <table class="table table-sm table-dark table-hover table-light">
        <thead class="thead-dark">
            <tr>
                <th class="text-center">Personel</th>
                <th class="text-center">Alıcı</th>
                <th class="text-center">Takip Kodu</th>
                <th class="text-center">Tarih</th>
                <th class="text-center">Detaylar</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var u in Model)
            {
                <tr>
                    <td class="text-center">@u.Personel</td>
                    <td class="text-center">@u.Alici</td>
                    <td class="text-center">@u.TakipKodu</td>
                    <td class="text-center">@u.Tarih</td>
                    <td class="text-center">
                        <a href="/Kargo/KargoTakip/@u.TakipKodu" class="btn btn-outline-primary btn-sm">Detaylar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="text-center">
    <a href="/Kargo/YeniKargo/" class="btn btn-outline-info btn-app">
        <i class="fas fa-plus"></i> Yeni Kargo Girişi
    </a>
</div>
