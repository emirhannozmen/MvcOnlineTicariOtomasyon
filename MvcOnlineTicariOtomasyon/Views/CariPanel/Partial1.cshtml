@model MvcOnlineTicariOtomasyon.Models.Siniflar.Cariler

@using (Html.BeginForm("CariBilgiGuncelle", "CariPanel", FormMethod.Post))
{
    <div class="form-horizontal">
        @Html.HiddenFor(x => x.CariID)

        <div class="form-group row">
            <label for="inputName" class="col-sm-2 col-form-label">İsim</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.CariAd, new { @class = "form-control", placeholder = "İsim" })
            </div>
        </div>

        <div class="form-group row">
            <label for="inputSoyad" class="col-sm-2 col-form-label">Soyad</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.CariSoyad, new { @class = "form-control", placeholder = "Soyad" })
            </div>
        </div>

        <div class="form-group row">
            <label for="inputEmail" class="col-sm-2 col-form-label">Mail</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.CariMail, new { @class = "form-control", placeholder = "E-posta" })
            </div>
        </div>

        <div class="form-group row">
            <label for="inputSehir" class="col-sm-2 col-form-label">Şehir</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.CariSehir, new { @class = "form-control", placeholder = "Şehir" })
            </div>
        </div>

        <div class="form-group row">
            <label for="inputSifre" class="col-sm-2 col-form-label">Şifre</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.CariSifre, new { @class = "form-control", placeholder = "Şifre", type = "password" })
            </div>
        </div>

        <div class="form-group row">
            <div class="offset-sm-2 col-sm-10">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="onay" />
                    <label class="form-check-label" for="onay">
                        Güncellemeyi onaylıyorum.
                    </label>
                </div>
            </div>
        </div>

        <div class="form-group row">
            <div class="offset-sm-2 col-sm-10">
                <button type="submit" class="btn btn-danger">Güncelle</button>
            </div>
        </div>
    </div>
}
