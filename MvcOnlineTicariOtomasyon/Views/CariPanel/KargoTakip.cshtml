@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<KargoDetay>

@{
    ViewBag.Title = "Kargo Takip";
    Layout = "~/Views/Shared/_CariLayout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Kargo Takip</h2>

    <!-- Kargo Takip Arama Formu -->
    @using (Html.BeginForm("KargoTakip", "CariPanel", FormMethod.Get))
    {
        <div class="input-group mb-4">
            <input type="text" class="form-control" placeholder="Kargo Takip Numarası" name="p" />
            <div class="input-group-append">
                <button type="submit" class="btn btn-primary">Ara</button>
            </div>
        </div>
    }

    <!-- Kargo Tablosu -->
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Personel</th>
                    <th scope="col">Alıcı</th>
                    <th scope="col">Takip Kodu</th>
                    <th scope="col">Tarih</th>
                    <th scope="col">Detaylar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var k in Model)
                {
                    <tr>
                        <td>@k.Personel</td>
                        <td>@k.Alici</td>
                        <td>@k.TakipKodu</td>
                        <td>@k.Tarih.ToString("dd MMM yyyy")</td>
                        <td>
                            <a href="/CariPanel/CariKargoTakip/@k.TakipKodu" class="btn btn-danger">Detaylar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
